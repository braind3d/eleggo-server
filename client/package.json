{
  "name": "eleggo",
  "author": "FAnton",
  "version": "0.1.0",
  "private": false,
  "homepage": "./",
  "main": "./public/electron.js",
  "description": "Programmable brain computer interface software",
  "dependencies": {
    "@emotion/react": "^11.4.1",
    "@emotion/styled": "^11.3.0",
    "@mui/icons-material": "^5.0.1",
    "@mui/material": "^5.0.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^14.14.33",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/web-bluetooth": "^0.0.11",
    "axios": "^0.21.1",
    "classnames": "^2.2.6",
    "concurrently": "^6.2.1",
    "electron-is-dev": "^2.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.3",
    "recharts": "^2.0.8",
    "sass": "^1.43.3",
    "socket.io": "^4.0.0",
    "socket.io-client": "^4.0.0",
    "typescript": "^4.3.5",
    "wait-on": "^6.0.0",
    "web-vitals": "^1.1.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^12.8.3",
    "@types/classnames": "^2.3.1",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "electron": "^13.1.9",
    "electron-builder": "^22.11.7",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-prettier": "^4.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint './src/**/*.{js,ts,jsx,tsx}'",
    "lint:fix": "eslint --fix './src/**/*.{js,ts,jsx,tsx}'",
    "start:electron": "concurrently 'BROWSER=none npm start' 'wait-on http://localhost:3000 && electron .'",
    "build:electron": "npm run build ; npx electron-builder -mwl -c.extraMetadata.main=./build/electron.js"
  },
  "build": {
    "appId": "com.fanton.eleggo",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "npmRebuild": false,
    "directories": {
      "buildResources": "assets"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
