{
  "name": "eleggo",
  "author": "FAnton",
  "version": "0.1.0",
  "private": false,
  "homepage": "./",
  "main": "./public/electron.js",
  "description": "Programmable brain computer interface software",
  "dependencies": {
    "@emotion/react": "^11.5.0",
    "@emotion/styled": "^11.3.0",
    "@mui/icons-material": "^5.0.4",
    "@mui/material": "^5.0.4",
    "@types/jest": "^27.0.2",
    "@types/react": "^17.0.31",
    "@types/react-dom": "^17.0.10",
    "@types/web-bluetooth": "^0.0.11",
    "axios": "^0.23.0",
    "classnames": "^2.3.1",
    "concurrently": "^6.3.0",
    "electron-is-dev": "^2.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "recharts": "^2.1.5",
    "sass": "^1.43.3",
    "socket.io": "^4.3.1",
    "socket.io-client": "^4.3.2",
    "typescript": "^4.4.4",
    "wait-on": "^6.0.0",
    "web-vitals": "^2.1.2"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/node-logger": "^6.3.12",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/react": "^6.3.12",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/classnames": "^2.3.1",
    "@types/node": "^16.11.3",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "electron": "^15.3.0",
    "electron-builder": "^22.13.1",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.4.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint './src/**/*.{js,ts,jsx,tsx}'",
    "lint:fix": "eslint --fix './src/**/*.{js,ts,jsx,tsx}'",
    "start:electron": "concurrently 'BROWSER=none npm start' 'wait-on http://localhost:3000 && electron .'",
    "build:electron": "npm run build ; npx electron-builder -mwl -c.extraMetadata.main=./build/electron.js",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "build": {
    "appId": "com.fanton.eleggo.client",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "npmRebuild": false,
    "directories": {
      "buildResources": "assets"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
